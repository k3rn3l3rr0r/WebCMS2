common:
	parameters:
		database:
			driver: pdo_sqlite
			dsn: "sqlite::memory:"
			charset: utf8
			collation: utf8_general_ci

		cacheNamespace: 'webcms2'
	php:
		date.timezone: Europe/Prague
		session.save_path: "%tempDir%/sessions"
	nette:
		session:
			autoStart: smart

	doctrine:
		connection: %database%
		console: false
		entityDirs: { ./Entity }
		
	migrations:
		connection: @doctrine.connection
		
	services:
		database: @doctrine.entityManager
		
		authenticator: Authenticator( @database::getRepository('WebCMS\Entity\User') )
		
	gedmo: 
		orm:
			em: @doctrine.entityManager
			tree: true
			sluggable: true
			timestampable: true
			
production < common:
development < common:
	services:
		cacheStorage: 
				class: \Nette\Caching\Storages\DevNullStorage
